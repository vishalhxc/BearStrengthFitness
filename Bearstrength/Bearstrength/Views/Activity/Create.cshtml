@model Bearstrength.ViewModels.ActivityFormViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container padded-top">
    <h1>Activity</h1>
    <h2>Create</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items='new SelectList(Model.Categories,"Id","Name")'></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create activity" asp-action="CreateActivity" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-default">Back to Activities</a>
                </div>
            </form>
        </div>
    </div>
</div>

